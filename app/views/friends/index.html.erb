<br />
<% if user_signed_in? %>
  <h1>Friends List</h1>

  <table class="table table-dark table-bordered table-hover">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Phone</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
      <% if friend.user == current_user%>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.email %></td>
          <td><%= link_to 'Show', friend, class:"btn btn-outline-info btn-sm" %></td>
          <td><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-primary" %>
<% else %>
  <h1>Hello!</h1>
  <p>You need to sign in before you can add friends</p>
<% end %>